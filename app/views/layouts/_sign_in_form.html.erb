<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: 'signin', placeholder: 'EMAIL', autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: 'signin', placeholder: 'PASSWORD', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field rememberme">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'signin_button' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'signupbtn' %><br />
<% end -%>
